<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    
    <TargetFramework>netcoreapp3.0</TargetFramework>
    
    <AssemblyTitle>GenHTTP Example Project</AssemblyTitle>
    <Description>Demonstrates, how the GenHTTP-Server basically works</Description>
    <Copyright>Copyright © 2019</Copyright>
    
  </PropertyGroup>
  
  <ItemGroup>
    <Compile Remove="Dist\**" />
    <EmbeddedResource Remove="Dist\**" />
    <None Remove="Dist\**" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\..\Core\GenHTTP.Core\GenHTTP.Core.csproj" />
  </ItemGroup>
  
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="copy $(TargetPath) $(SolutionDir)Dist\netcoreapp3.0\projects\ExampleProject\$(TargetFileName)" />
  </Target>
  
</Project>